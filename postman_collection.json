{
  "info": {
    "name": "Employee Task Management API",
    "description": "Complete API collection for testing Employee and Task endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Employees",
      "item": [
        {
          "name": "Create Employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"position\": \"Software Engineer\",\n  \"department\": \"Engineering\",\n  \"salary\": 75000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            }
          }
        },
        {
          "name": "Get All Employees",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            }
          }
        },
        {
          "name": "Get Employee by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/employees/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Update Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"position\": \"Senior Software Engineer\",\n  \"salary\": 90000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Employee",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/employees/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Fix login bug\",\n  \"description\": \"Users cannot login with email authentication\",\n  \"assignedTo\": \"YOUR_EMPLOYEE_ID\",\n  \"priority\": \"high\",\n  \"status\": \"pending\",\n  \"dueDate\": \"2024-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/tasks/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_TASK_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in-progress\",\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_TASK_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/tasks/:id",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "YOUR_TASK_ID"
                }
              ]
            }
          }
        },
        {
          "name": "Get Tasks by Employee",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/tasks/employee/:employeeId",
              "host": ["{{base_url}}"],
              "path": ["api", "tasks", "employee", ":employeeId"],
              "variable": [
                {
                  "key": "employeeId",
                  "value": "YOUR_EMPLOYEE_ID"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    }
  ]
}

